<?xml version="1.0" encoding="utf-8"?>

<extension type="module" version="2.5.0" client="site" method="upgrade">
    <name>mod_login_nasir</name>
    <author>Nasir Khan Saikat</author>
    <creationDate>November 2012</creationDate>
    <license>GNU/GPL v3 </license>
    <copyright>This extension in released under the GNU/GPL v3 License - http://www.gnu.org/licenses/gpl.html</copyright>
    <authorEmail>nasir8891@gmail.com</authorEmail>
    <authorUrl>http://nasirkhn.com</authorUrl>
    <version>1.0.1</version>
    <description></description>	
	
    <files>
        <filename module="mod_login_nasir">mod_login_nasir.php</filename>
        <filename>mod_login_nasir.xml</filename>
        <filename>index.html</filename>
        <filename>helper.php</filename>        
        <folder>css</folder>
        <folder>images</folder>
        <folder>tmpl</folder>
    </files>
       
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="logInUrl" type="text" 
                       default="login.php" 
                       label="Login Url" 
                       description="Login Url" />
                
		            <field name="logOutUrl" type="text" 
                       default="logout.php" 
                       label="Logout Url" 
                       description="Logout Url" /> 
                
                <field name="registerUrl" type="text" 
                       default="#" 
                       label="Register Url" 
                       description="Register Url" /> 

                <field name="redirectUrl" type="text" 
                       default="#" 
                       label="Redirect Url" 
                       description="Redirect Url" />                                      		
                
                <field name="moduleclass_sfx" 
                       type="text" 
                       default="" 
                       label="Module Class Suffix" 
                       description="If you want to add extra formatting, write the module class suffix here" />
                
            </fieldset>           
        </fields>
    </config>
</extension>
